<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.ana.nmct.multimania.ui.SettingsFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="left|top"
        android:layout_marginLeft="10dp"
        android:background="@color/thirdColor"
        >

        <!-- android:text="@string/settings_sync"-->

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <CheckBox android:id="@+id/checkbox_sync"
                android:layout_width="fill_parent"
                android:layout_height="55dp"

                android:textColor="@color/white"
                android:button="@drawable/checkbox"
                android:checked="false"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_sync"
                android:id="@+id/txtSync"
                android:textColor="@color/white"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="35dp"
                android:paddingBottom="8dp"/>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginRight="10dp"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <CheckBox android:id="@+id/checkbox_notify"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:button="@drawable/checkbox"
                android:textColor="@color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/settings_notify"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="35dp"
                android:paddingBottom="8dp"
                android:id="@+id/txtNotify"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginRight="10dp"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <CheckBox android:id="@+id/checkbox_suggestion"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:button="@drawable/checkbox"
                android:textColor="@color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/settings_suggestion"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="35dp"
                android:paddingBottom="8dp"
                android:id="@+id/txtSuggestion"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
</FrameLayout>
