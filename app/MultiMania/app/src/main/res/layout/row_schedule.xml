<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <TextView
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Een zeer lange title zeg hoe kan dat nu?"
        android:id="@+id/txtTitle"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_toLeftOf="@+id/btnFavorite"
        />



    <ImageButton
        android:src="@drawable/ic_action_not_important_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@id/btnFavorite"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:layout_margin="8dp"
        />

    <TextView
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room"
        android:id="@+id/txtRoom"
        android:layout_below="@id/txtTitle"
        android:layout_margin="8dp"
        />

    <TextView
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/talk_tag"
        android:id="@+id/txtTag"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/txtRoom"
        android:layout_margin="8dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/txtRoom"
        android:background="@color/mm_light_brown"
        />

</RelativeLayout>