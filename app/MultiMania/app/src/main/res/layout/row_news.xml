<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mm_card">

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/imgNews"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.etsy.android.grid.util.DynamicHeightTextView
        android:background="@color/darkTransparent"
        android:textColor="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title"
        android:id="@+id/txtNewsTitle"
        android:layout_alignBottom="@+id/imgNews"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="8dp"/>

    <com.etsy.android.grid.util.DynamicHeightTextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txtNewsText"
        android:layout_below="@+id/imgNews"
        android:layout_margin="8dp"
        android:textSize="15sp" />
    <View
        android:layout_below="@id/txtNewsText"
        style="@style/CardBottomBorder"
        />
</RelativeLayout>