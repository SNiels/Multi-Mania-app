<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/txtDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/myschedule_timegap_info"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/secondaryColor"
        android:gravity="center_vertical"
        android:lines="2"
        android:paddingLeft="8dp"/>

    <View
        android:id="@+id/dialogTitleSeperator"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/secondaryColor"
        android:layout_below="@id/txtDialogTitle"/>

    <TextView
        android:id="@+id/txtSuggestionInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/myschedule_suggestion_time"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_margin="8dp"
        android:layout_below="@id/dialogTitleSeperator"/>

    <TextView
        android:id="@+id/txtSuggestionSubTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/suggestion_subtitle"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@id/txtSuggestionInfo"
        android:layout_margin="8dp" />

    <ListView
        android:id="@+id/suggestion_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtSuggestionSubTitle"
        android:layout_margin="8dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="5.0dp"/>

</RelativeLayout>